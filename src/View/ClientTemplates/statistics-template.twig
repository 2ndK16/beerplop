{% verbatim %}
  <script id="statistics-template" type="text/template">
    <div class="row">
      <div class="col-sm-0 col-md-1 col-lg-3"></div>
      <div class="col-sm-12 col-md-10 col-lg-6">
        <h4>{{ #t }}"stats.head.general"{{ /t }}</h4>
        {{ #generalStats }}
          <b>{{ label }}</b>&nbsp;{{ value }}<br />
        {{ /generalStats }}

        {{ #showSacrificeStats }}
          <hr />
          <h4>{{ #t }}"stats.head.sacrifice"{{ /t }}</h4>
          {{ #sacrificeStats }}
            <b>{{ label }}</b>&nbsp;{{ value }}<br />
          {{ /sacrificeStats }}
        {{ /showSacrificeStats }}

        {{ #showStockMarketStats }}
          <hr />
          <h4>{{ #t }}"stockMarket.title"{{ /t }}</h4>
          {{ #stockMarketStats }}
            <b>{{ label }}</b>&nbsp;{{ value }}<br />
          {{ /stockMarketStats }}
        {{ /showStockMarketStats }}

        {{ #showAdditionalInvestments }}
          <hr />
          <h4>{{ #t }}"stats.head.additional"{{ /t }}</h4>
          {{ #researchProjectsEnabled }}
            {{ #researchProjectStats }}
              <b>{{ label }}</b>&nbsp;{{ value }}<br />
            {{ /researchProjectStats }}
          {{ /researchProjectsEnabled }}

          {{ #beerBankEnabled }}
            {{ #beerBankStats }}
              <b>{{ label }}</b>&nbsp;{{ value }}<br />
            {{ /beerBankStats }}
          {{ /beerBankEnabled }}
        {{ /showAdditionalInvestments }}
      </div>
      <div class="col-sm-0 col-md-1 col-lg-3"></div>
    </div>
  </script>
{% endverbatim %}