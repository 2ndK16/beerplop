<div id="sacrifice-hint-modal" class="modal fade" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">{{ translator.translate('sacrifice.title') }}</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="{{ translator.translate('aria.close') }}">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body"></div>

      <div class="modal-footer">
        <button id="sacrifice" type="submit" class="btn btn-danger">
          {{ translator.translate('sacrifice.seeYouAgain') }}
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">
          {{ translator.translate('cancel') }}
        </button>
      </div>
    </div>
  </div>
</div>
