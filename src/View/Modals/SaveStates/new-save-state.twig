<div id="new-save-state-modal" class="modal fade" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="form-new-save-state">
        <div class="modal-header">
          <h4 class="modal-title">{{ translator.translate('save.new.title') }}</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="{{ translator.translate('aria.close') }}">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <div id="create-save-state-messages"></div>
          {{ translator.translate('save.new.description') }}
          <div class="form-group">
            <input type="text"
                   class="form-control"
                   id="save-state-name"
                   name="save-state-name"
                   placeholder="{{ translator.translate('save.new.name') }}"
                   autocomplete="off"
                   minlength="4"
                   maxlength="32"
                   required
            />
          </div>
        </div>

        <div class="modal-footer">
          <button id="create-save-state" class="btn btn-raised btn-success">
            {{ translator.translate('save.new.create') }}
          </button>
          <button id="cancel-create-save-state"
                  type="button"
                  class="btn btn-default"
                  data-dismiss="modal"
          >
            {{ translator.translate('cancel') }}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
