<div id="save-states-modal" class="modal fade" role="dialog" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">{{ translator.translate('save.list.title') }}</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="{{ translator.translate('aria.close') }}">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <p>
          {{ translator.translate('save.current') }}:
          <span id="current-save-state-title" class="font-weight-bold">{{ translator.translate('save.localSave') }}</span>
          <button id="save-current-state" class="btn btn-raised btn-primary float-right">
            {{ translator.translate('save.save') }}
          </button>
          <button id="switch-to-local-save-state" class="btn btn-raised btn-secondary float-right">
            {{ translator.translate('save.switchToLocalSave') }}
          </button>
        </p>

        <hr />
        <p>{{ translator.translate('save.list.available') }}:</p>
        <div id="save-state-table-container" class="available-save-state-toggle d-none"></div>
        <div class="available-save-state-toggle">{{ translator.translate('save.list.empty') }}</div>
      </div>

      <div class="modal-footer">
        <button id="show-create-save-state-modal" type="button" class="btn btn-raised btn-success">
          {{ translator.translate('save.new.create') }}
        </button>
      </div>
    </div>
  </div>
</div>
