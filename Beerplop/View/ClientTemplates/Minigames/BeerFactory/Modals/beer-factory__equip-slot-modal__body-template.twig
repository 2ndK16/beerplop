{% verbatim %}
  <script id="beer-factory__equip-slot-modal__body-template" type="text/template">
    {{ #equipped }}
      {{ #underConstruction }}
        <div class="alert alert-info" role="alert">
          {{ #t }}"beerFactory.modal.equip.underConstructionHint"{{ /t }}
        </div>
      {{ /underConstruction }}
      {{ ^underConstruction }}
        <div class="alert alert-info" role="alert">
          {{ #t }}"beerFactory.modal.equip.changeHint"{{ /t }}
        </div>
        {{ #looseSlotOnChange }}
          <div class="alert alert-info" role="alert">
            {{ #t }}"beerFactory.modal.equip.looseSlotOnChange"{{ /t }}
          </div>
        {{ /looseSlotOnChange }}
      {{ /underConstruction }}
    {{ /equipped }}

    <div class="beer-factory__centered-slot-container">
      <b>{{ #t }}"beerFactory.modal.equip.current"{{ /t }}{{ #underConstruction }} ({{ #t }}"beerFactory.modal.equip.underConstruction"{{ /t }}){{ /underConstruction }}:</b>
      <div class="beer-factory__slot-container pb-4">
        <div class="beer-factory__slot beer-factory__slot--equipped card"
             data-trigger="hover"
             data-boundary="window"
             data-toggle="popover"
             data-placement="right"
             data-html="true"
             data-title="{{ equippedLabel }}"
             data-content="{{{ equippedContent }}}"
        >
          <svg viewBox="0 0 44 44">
            <use xlink:href="#svg-slot-item__{{ equippedKey }}"></use>
          </svg>
        </div>
      </div>
    </div>

    {{ ^underConstruction }}
      <div class="beer-factory__centered-slot-container">
        <b>{{ #t }}"beerFactory.modal.equip.available"{{ /t }}:</b>
        <div class="beer-factory__slot-container pb-4">
          {{ #availableEquipments }}
            <div class="beer-factory__slot card"
                 data-trigger="hover"
                 data-boundary="window"
                 data-toggle="popover"
                 data-placement="right"
                 data-html="true"
                 data-title="{{ label }}"
                 data-item="{{ key }}"
            >
              <svg viewBox="0 0 44 44">
                <use xlink:href="#svg-slot-item__{{ key }}"></use>
              </svg>
            </div>
          {{ /availableEquipments }}
          {{ ^availableEquipments }}
            <p>{{ #t }}"beerFactory.modal.equip.emptyState"{{ /t }}</p>
          {{ /availableEquipments }}
        </div>
      </div>
    {{ /underConstruction }}
  </script>
{% endverbatim %}