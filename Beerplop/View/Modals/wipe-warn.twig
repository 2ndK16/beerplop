<div id="wipe-warn-modal" class="modal fade" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">{{ translator.translate('wipe.title') }}</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        {{ translator.translate('wipe.warning') }}
      </div>
      <div class="modal-footer">
        <button id="wipe" type="button" class="btn btn-danger" data-dismiss="modal">
          {{ translator.translate('wipe.noReturn') }}
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">
          {{ translator.translate('cancel') }}
        </button>
      </div>
    </div>
  </div>
</div>